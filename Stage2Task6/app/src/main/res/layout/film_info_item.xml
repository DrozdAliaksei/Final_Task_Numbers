<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/film_preview"
        android:layout_width="170dp"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimaryDark"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/film_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/film_preview"
        app:layout_constraintEnd_toEndOf="@id/film_preview"
        tools:text="10.00.00"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/film_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@id/film_preview"
        app:layout_constraintTop_toTopOf="parent"
        tools:height="130dp"
        tools:width="200dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
